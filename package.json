{
  "name": "time-tracker",
  "private": true,
  "packageManager": "bun@1.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate --filter=@time-tracker/database",
    "db:push": "turbo run db:push --filter=@time-tracker/database",
    "db:studio": "turbo run db:studio --filter=@time-tracker/database"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  }
}
